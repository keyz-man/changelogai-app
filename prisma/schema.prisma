generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id           String      @id @default(uuid())
  name         String
  description  String
  repositoryUrl String
  createdAt    DateTime    @default(now())
  commits      Commit[]
  changelogs   Changelog[]
}

model Commit {
  id        String   @id @default(uuid())
  message   String
  author    String
  date      DateTime
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Changelog {
  id        String   @id @default(uuid())
  projectId String
  title     String
  content   String
  fromDate  DateTime
  toDate    DateTime
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
